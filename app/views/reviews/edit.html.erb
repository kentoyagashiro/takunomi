<div class="text-center">
  <h1><%= @review.title %> の編集ページ</h1>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(model: @review) do |f| %>

      <div class="mb-3">
        <%= f.label :title, 'タイトル' %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :comment, 'コメント' %>
        <%= f.text_field :comment, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :combi, '組み合わせ' %>
        <%= f.text_field :combi, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :buystore, '買ったお店' %>
        <%= f.text_field :buystore, class: 'form-control' %>
      </div>

      <%= f.submit '投稿', class: 'btn btn-primary w-100' %>
    <% end %>
  </div>
</div>

<%= link_to '一覧に戻る', reviews_path %>