<div class="row">
  <aside class="col-sm-4">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%= @user.name %></h3>
      </div>
    </div>
  </aside>
  <div class="col-sm-8">
    <ul class="nav nav-tabs nav-justified mb-3">
      <li class="nav-item"><a href="<%= user_path(@user) %>" class="nav-link <%= 'active' if current_page?(user_path(@user)) %>">投稿レビュー  <span class="badge bg-secondary"><%= @count_reviews %></span></a></li>
      <li class="nav-item"><a href="<%= likes_user_path(@user) %>" class="nav-link"<%= "active" if current_page?(likes_user_path(@user)) %>"> お気に入りレビュー <span class="badge bg-secondary"><%= @count_likes %></span></a></li>
    </ul>
      <div class="text-center">
        <h1>お気に入り一覧</h1>
         <table class="table table-striped table-bordered">
            <% @likes.each do |likes| %>
              <tr><td><%= link_to likes.title, likes %></td></tr>
              <tr><td><%= likes.comment %></td></tr>
            <% end %>
          </table>
      </div>
  </div>
</div>