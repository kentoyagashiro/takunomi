<% if current_user.likes?(review) %>
  <%= form_with(model: current_user.favorites.find_by(review_id: review.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :review_id, review.id%>
    <%= f.submit 'お気に入りから外す', class: 'btn btn-danger btn-block' %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
    <%= hidden_field_tag :review_id, review.id %>
    <%= f.submit 'お気に入り', class: 'btn btn-primary btn-block' %>
  <% end %>
<% end %>